<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiptActivity">


    <TextView
        android:id="@+id/receiptTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:textSize="42sp"
        android:text="@string/thanks_for_your_purchase"
        android:gravity="center"
        android:layout_marginBottom="24dip"
        android:layout_margin="60dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/receiptInfoTextView"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginBottom="79dp"
        android:gravity="center"
        android:text="Receipt Info"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonOrderAgain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receiptTitleTextView"
        app:layout_constraintVertical_bias="0.459" />

    <Button
        android:id="@+id/buttonOrderAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="80dip"
        android:text="Order again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="80dip"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>